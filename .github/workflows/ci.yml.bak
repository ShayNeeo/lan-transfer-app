name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install dependencies (webpage)
        run: |
          cd webpage
          npm ci

      - name: Build (webpage)
        run: |
          cd webpage
          npm run build

      - name: Run tests (webpage)
        run: |
          cd webpage
          npm test -- --watchAll=false --silent || true

      - name: Upload build artifact
        uses: actions/upload-artifact@v4
        with:
          name: webpage-build
          path: webpage/build
